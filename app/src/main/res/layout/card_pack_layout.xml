<android.support.v7.widget.GridLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dip"

    grid:columnCount="3"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Standard Pack"
        grid:layout_columnWeight="0.2"
        grid:layout_gravity="fill"
        android:gravity="center"
        android:textSize="25dp"
        android:tag="pack_name"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        grid:layout_columnWeight="0.2"
        grid:layout_gravity="fill"
        android:gravity="center"
        android:textSize="25dp"
        android:tag="pack_size"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        grid:layout_columnWeight="0.2"
        grid:layout_gravity="fill"
        android:gravity="center"
        android:textSize="25dp"
        android:tag="pack_linear_container">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="pack_frame_container">

            <CheckBox
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:tag="pack_checkbox"
                android:onClick="onCheckboxClicked"
                />

            <Button
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:visibility="invisible"
                android:text="99Â¢"
                android:textSize="25dp"
                android:background="@android:color/holo_red_dark"
                android:tag="pack_buy_button"
                />
            </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.GridLayout>